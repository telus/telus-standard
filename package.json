{
  "version": "0.0.0-development",
  "name": "@telus/telus-standard",
  "description": "Standard for TELUS Digital",
  "homepage": "https://github.com/telus/telus-standard",
  "repository": {
    "type": "git",
    "url": "https://github.com/telus/telus-standard.git"
  },
  "license": "UNLICENSED",
  "main": "index.js",
  "bin": {
    "telus-standard": "./bin/cmd.js"
  },
  "keywords": [
    "telus",
    ""
  ],
  "engines": {
    "node": ">=8"
  },
  "files": [
    "bin",
    "index.js",
    "options.js",
    "eslintrc.js"
  ],
  "bugs": {
    "url": "https://github.com/telus/telus-standard/issues"
  },
  "scripts": {
    "coverage": "opener coverage/lcov-report/index.html",
    "lint:audit": "npm audit",
    "lint:deps": "npx updated --ignore=eslint,eslint-config-airbnb",
    "lint:ec": "npx editorconfig-checker .",
    "lint:js": "./bin/cmd.js --verbose",
    "lint:md": "npx remark-cli --quiet --frail .",
    "lint": "npx npm-run-all -p -c -l lint:*",
    "setup-local": "npx install-group peer --package @telus/build-essential --no-save",
    "fix:js": "./bin/cmd.js --verbose --fix",
    "fix:md": "npm run lint:md -- -o",
    "fix:deps": "npm run lint:deps -- --update",
    "show-rules": "eslint-index eslintrc.json",
    "show-rules-disabled": "eslint-index eslintrc.json --status omitted off",
    "show-summary": "eslint-index eslintrc.json --format table",
    "test": "./bin/cmd.js --verbose && tape test/*.js"
  },
  "dependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "standard-engine": "^12.0.0"
  },
  "devDependencies": {
    "@telus/remark-config": "^1.2.0",
    "cross-spawn": "^6.0.5",
    "eslint-index": "^1.5.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "run-parallel-limit": "^1.0.5",
    "standard-packages": "^3.7.0",
    "tape": "^4.11.0"
  },
  "telus-standard": {
    "ignore": [
      "/test"
    ]
  }
}
